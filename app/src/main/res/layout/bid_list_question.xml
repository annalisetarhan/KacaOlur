<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

    <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:background="@drawable/bid_list_border">

        <TextView
            android:text="@{String.format(@string/courier_name, courier_name)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/courier_name"/>

        <TextView
            android:text="@{String.format(@string/question_header, question)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question"/>

        <Button
            android:text="@string/answer_question_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/answer_button"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
