<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout">

    <data>
        <variable name="item_price_formatted" type="String"/>
        <variable name="delivery_price_formatted" type="String"/>
        <variable name="total_price_formatted" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HeadlineStyle" android:id="@+id/payment_textview"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp" app:srcCompat="@android:drawable/ic_menu_mapmode"
                android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/payment_textview"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:id="@+id/prices_linear_layout"
                app:layout_constraintBottom_toTopOf="@id/buttons_layout" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/item_price_textview"
                    android:text="@{item_price_formatted}"
                    tools:text="Item Price: 8.00"
                    android:textAlignment="center"
                    android:layout_marginStart="16dp"
                    android:textSize="24sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/delivery_price_textview"
                    android:text="@{delivery_price_formatted}"
                    android:layout_marginStart="16dp"
                    android:textAlignment="center"
                    tools:text="Delivery Price: 3.00"
                    android:textSize="24sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/total_price_textview"
                    android:text="@{total_price_formatted}"
                    tools:text="Total Price: 11.00"
                    android:layout_marginTop="24dp"
                    android:textAlignment="center"
                    android:textSize="30sp" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="?android:attr/buttonBarStyle"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/buttons_layout">
            <Button
                    android:text="@string/geri"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/geri_button"
                    android:layout_marginEnd="30dp" android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="@string/pay"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pay_button"
                    android:layout_weight="1" android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>